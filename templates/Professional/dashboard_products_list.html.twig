{% extends 'layouts/UserDashboard_layout.html.twig' %}

{% block content %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="dashboard-projects">
    <span>
        <span class="Breadcrumb-nonactive"><a href="/en/account/index">Dashboard</a></span><span class="breadcrumb-divider">></span><span class="Breadcrumb-active">Products</span>
    </span>
</div>
<div class="line-8"></div>

<div class="dashboard-container">
    <div class="left-column" style="width: 100%; justify-content:center;">
        <div class="projectssection">
            <div class="dashboardheading-section">
                <div class="sectionheading">
                    <h2>Products</h2>
                    <p class="sectionsubheading">Manage Your Products.</p> 
                </div>
                <div class="DashboardStatsSection">
                    <div class="totalnumber">
                        {% if ProProducts |length < 10 %}
                            <p>0{{ ProProducts |length }}</p>
                        {% else %}
                            <p>{{ ProProducts |length }}</p>
                        {% endif %}    
                    </div>
                    <div class="totalnumberLable">
                        {% if ProProducts |length < 2 %}
                            <p>Product</br>Found</p>
                        {% else %}
                            <p>Products</br>Found</p>
                        {% endif %}    
                    </div>
                </div>
            </div>

            <div class="RequirementsMain">
                <div class="Add-project-button" style="padding: 20px 0px; margin-bottom: 20px;">
                    {% if app.user.customertype == 'Manufacturer' %}
                    <a href="/manufacturer/add-product" class="btn btn-lg btn-block btn-success btn addrequirebtn" target="_blank">
                        <i class="fa fa-plus" aria-hidden="true" style="font-size:15px;"></i> Add Product
                    </a>
                    {% endif %}
                    {% if app.user.customertype == 'Dealer' %}
                    <a href="/dealers/add-product" class="btn btn-lg btn-block btn-success btn addrequirebtn" target="_blank">
                        <i class="fa fa-plus" aria-hidden="true" style="font-size:15px;"></i> Add Product
                    </a>
                    {% endif %}
                    {% if app.user.customertype == 'Distributor' %}
                    <a href="/distributor/add-product" class="btn btn-lg btn-block btn-success btn addrequirebtn" target="_blank">
                        <i class="fa fa-plus" aria-hidden="true" style="font-size:15px;"></i> Add Product
                    </a>
                    {% endif %}
                    {% if app.user.customertype == 'Supplier' %}
                    <a href="/supplier/add-product" class="btn btn-lg btn-block btn-success btn addrequirebtn" target="_blank">
                        <i class="fa fa-plus" aria-hidden="true" style="font-size:15px;"></i> Add Product
                    </a>
                    {% endif %}
                    {% if app.user.customertype == 'Retailer' %}
                    <a href="/retailer/add-product" class="btn btn-lg btn-block btn-success btn addrequirebtn" target="_blank">
                        <i class="fa fa-plus" aria-hidden="true" style="font-size:15px;"></i> Add Product
                    </a>
                    {% endif %}
                </div>

                <div class="dashboard-controls">
                    <div class="search-container-new">
                        <input type="text" id="productSearch" placeholder="Search products..." class="search-input">
                        <i class="fas fa-search search-icon-new"></i>
                    </div>
                    
                    <div class="view-toggle">
                        <button class="view-btn active" data-view="grid" title="Grid View">
                            <i class="fas fa-th-large"></i>
                        </button>
                        <button class="view-btn" data-view="list" title="List View">
                            <i class="fas fa-list"></i>
                        </button>
                    </div>
                    
                    <div class="sort-dropdown">
                        <select id="sortProducts" class="sort-select">
                        
                                <option value="date-desc" {% if currentSort == 'date-desc' %}selected{% endif %}>Newest First</option>
                                <option value="date-asc" {% if currentSort == 'date-asc' %}selected{% endif %}>Oldest First</option>
                                <option value="name-asc" {% if currentSort == 'name-asc' %}selected{% endif %}>Name (A-Z)</option>
                                <option value="name-desc" {% if currentSort == 'name-desc' %}selected{% endif %}>Name (Z-A)</option>
                                <option value="price-asc" {% if currentSort == 'price-asc' %}selected{% endif %}>Price (Low to High)</option>
                                <option value="price-desc" {% if currentSort == 'price-desc' %}selected{% endif %}>Price (High to Low)</option>
                                <option value="views-desc" {% if currentSort == 'views-desc' %}selected{% endif %}>Most Viewed</option>
                                <option value="views-asc" {% if currentSort == 'views-asc' %}selected{% endif %}>Least Viewed</option>
                            
                        </select>
                    </div>
                </div>

                <!-- Modern Card Grid View -->
                <div class="products-grid" id="productsGrid">
                    {% for ProProduct in ProProducts %}
                        <div class="product-card" data-product-name="{{ ProProduct.ProductName() ?: '' }}" data-product-brand="{{ ProProduct.ProductBrand() ?: '' }}" data-product-category="{{ ProProduct.ParentCategory() ?: '' }}">
                            <div class="product-image-container">
                                {% if ProProduct.getProductImage() and ProProduct.getProductImage().getItems()|length > 0 %}
                                    {% set firstItem = ProProduct.getProductImage().getItems()[0] %}
                                    {% if firstItem.getImage().getMimeType() starts with 'video/' %}
                                        <video class="product-image" muted>
                                            <source src="{{ firstItem.getImage().getFullPath() }}" type="{{ firstItem.getImage().getMimeType() }}">
                                        </video>
                                    {% else %}
                                        <img src="{{ firstItem.getImage().getThumbnail('product_listing').getPath() }}" 
                                             alt="{{ ProProduct.ProductName() }}" 
                                             class="product-image"
                                             loading="lazy">
                                    {% endif %}
                                {% else %}
                                    <div class="product-image-placeholder">
                                        <i class="fas fa-image"></i>
                                        <span>No Image</span>
                                    </div>
                                {% endif %}
                                <div class="product-overlay">
                                    <a href="/manufacturer/product/{{ ProProduct.getKey() }}" class="btn-view">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    <a href="/account/Product/edit/{{ ProProduct.getKey() }}" class="btn-edit">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <button class="btn-delete" data-product-id="{{ ProProduct.getKey() }}" data-product-name="{{ ProProduct.ProductName() }}">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </div>
                            </div>
                            
                            <div class="product-info">
                                <div class="product-header">
                                    <h3 class="product-title">
                                        <a href="/manufacturer/product/{{ ProProduct.getKey() }}">
                                            {{ ProProduct.ProductName() ?: 'Unnamed Product' }}
                                        </a>
                                    </h3>
                                    <div class="product-id">#{{ ProProduct.getKey() }}</div>
                                </div>
                                
                                <div class="product-details">
                                    <div class="product-meta">
                                        <span class="product-brand">
                                            <i class="fas fa-tag"></i>
                                            {{ ProProduct.ProductBrand() ?: 'No Brand' }}
                                        </span>
                                        <span class="product-category">
                                            <i class="fas fa-folder"></i>
                                            {{ ProProduct.ParentCategory() ?: 'Uncategorized' }}
                                        </span>
                                    </div>
                                    
                                    <div class="product-price">
                                        {% if ProProduct.Price() %}
                                            <span class="price-amount">₹{{ ProProduct.Price() }}</span>
                                        {% else %}
                                            <span class="price-na">Price N/A</span>
                                        {% endif %}
                                    </div>
                                    
                                    <div class="product-date">
                                        <i class="fas fa-calendar"></i>
                                        {{ ProProduct.getCreationDate()|date('M d, Y') }}
                                    </div>
                                    <div class="product-stats">
                                        <span class="product-views">
                                            <i class="fas fa-eye"></i>
                                            {{ ProProduct.getPageViewsCount() ?? 0 }} views
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <!-- List View Table (Hidden by default) -->
                <div class="products-table-container" id="productsTable" style="display: none;">
                    <table class="requirements-table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>ID</th>
                                <th>Product</th>
                                <th>Brand</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Views</th>
                                <th>Published Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ProProduct in ProProducts %}
                                <tr class="requirement-item" data-product-name="{{ ProProduct.ProductName() ?: '' }}" data-product-brand="{{ ProProduct.ProductBrand() ?: '' }}" data-product-category="{{ ProProduct.ParentCategory() ?: '' }}">
                                    <td class="product-image-cell">
                                        {% if ProProduct.getProductImage() and ProProduct.getProductImage().getItems()|length > 0 %}
                                            {% set firstItem = ProProduct.getProductImage().getItems()[0] %}
                                            {% if firstItem.getImage().getMimeType() starts with 'video/' %}
                                                <video class="table-product-image" muted>
                                                    <source src="{{ firstItem.getImage().getFullPath() }}" type="{{ firstItem.getImage().getMimeType() }}">
                                                </video>
                                            {% else %}
                                                <img src="{{ firstItem.getImage().getThumbnail('product_listing').getPath() }}" 
                                                     alt="{{ ProProduct.ProductName() }}" 
                                                     class="table-product-image"
                                                     loading="lazy">
                                            {% endif %}
                                        {% else %}
                                            <div class="table-image-placeholder">
                                                <i class="fas fa-image"></i>
                                            </div>
                                        {% endif %}
                                    </td>
                                    <td>{{ ProProduct.getKey() }}</td>
                                    <td>
                                        {% if ProProduct %}
                                            <a href="/manufacturer/product/{{ ProProduct.getKey() }}" class="requirementTitle">{{ ProProduct.ProductName() }} </a>
                                        {% endif %}
                                    </td>
                                    <td>{{ ProProduct.ProductBrand() ?: 'N/A' }}</td>
                                    <td>{{ ProProduct.ParentCategory() ?: 'N/A' }}</td>
                                    <td>
                                        {% if ProProduct.Price() %}
                                            <span class="price-cell">₹{{ ProProduct.Price() }}</span>
                                        {% else %}
                                            <span class="price-na">N/A</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="views-count">
                                            <i class="fas fa-eye"></i>
                                            {{ ProProduct.getPageViewsCount() ?? 0 }}
                                        </span>
                                    </td>
                                    <td>{{ ProProduct.getCreationDate()|date('d-m-Y') }}</td>
                                    <td class="actions-cell">
                                        <a href="/manufacturer/product/{{ ProProduct.getKey() }}" class="btn-action btn-view-small" title="View">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/account/Product/edit/{{ ProProduct.getKey() }}" class="btn-action btn-edit-small" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="btn-action btn-delete-small" title="Delete" data-product-id="{{ ProProduct.getKey() }}" data-product-name="{{ ProProduct.ProductName() }}">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <style>
                    /* Product Stats */
                    .product-stats {
                        display: flex;
                        justify-content: space-between;
                        margin-top: 12px;
                        padding-top: 12px;
                        border-top: 1px solid #e9ecef;
                    }

                    .product-views {
                        display: flex;
                        align-items: center;
                        gap: 6px;
                        font-size: 13px;
                        color: #6c757d;
                    }

                    .product-views i {
                        color: #adb5bd;
                    }

                    /* Table view styles for views count */
                    .views-count {
                        display: flex;
                        align-items: center;
                        gap: 6px;
                        color: #6c757d;
                    }

                    .views-count i {
                        color: #adb5bd;
                        font-size: 14px;
                    }

                    /* Highlight popular products */
                    .product-card.high-views {
                        border-left: 4px solid #4a90e2;
                    }

                    .product-card.high-views .product-views {
                        color: #4a90e2;
                        font-weight: 500;
                    }

                    .product-card.high-views .product-views i {
                        color: #4a90e2;
                    }
                </style>

                {% if ProProducts|length == 0 %}
                    <div class="no-products">
                        <i class="fas fa-box-open"></i>
                        <h3>No Products Found</h3>
                        <p>You haven't added any products yet. Click the "Add Product" button to get started.</p>
                    </div>
                {% endif %}
            </div>
        </div> 
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // View toggle functionality
        const viewButtons = document.querySelectorAll('.view-btn');
        const gridView = document.getElementById('productsGrid');
        const tableView = document.getElementById('productsTable');
        
        viewButtons.forEach(btn => {
            btn.addEventListener('click', function() {
                const view = this.dataset.view;
                
                // Update active button
                viewButtons.forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                
                // Toggle views
                if (view === 'grid') {
                    gridView.style.display = 'grid';
                    tableView.style.display = 'none';
                } else {
                    gridView.style.display = 'none';
                    tableView.style.display = 'block';
                }
            });
        });

        // Search functionality for both views
        const searchInput = document.getElementById('productSearch');
        
        searchInput.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            
            // Search in grid view
            const productCards = document.querySelectorAll('.product-card');
            productCards.forEach(card => {
                const productName = card.dataset.productName.toLowerCase();
                const productBrand = card.dataset.productBrand.toLowerCase();
                const productCategory = card.dataset.productCategory.toLowerCase();
                
                if (productName.includes(searchTerm) || 
                    productBrand.includes(searchTerm) || 
                    productCategory.includes(searchTerm)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
            
            // Search in table view
            const productRows = document.querySelectorAll('#productsTable tbody tr');
            productRows.forEach(row => {
                const productName = row.dataset.productName.toLowerCase();
                const productBrand = row.dataset.productBrand.toLowerCase();
                const productCategory = row.dataset.productCategory.toLowerCase();
                
                if (productName.includes(searchTerm) || 
                    productBrand.includes(searchTerm) || 
                    productCategory.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });

        // Sorting functionality
        const sortSelect = document.getElementById('sortProducts');
        sortSelect.addEventListener('change', function() {
            const sortValue = this.value;
            window.location.href = window.location.pathname + '?sort=' + sortValue;
        });

        // Enhanced hover effects for table
        const table = document.querySelector('#productsTable table');
        if (table) {
            table.addEventListener('mouseover', function(e) {
                if (e.target.tagName === 'TD') {
                    e.target.parentNode.style.backgroundColor = '#f8f9fa';
                }
            });
            
            table.addEventListener('mouseout', function(e) {
                if (e.target.tagName === 'TD') {
                    e.target.parentNode.style.backgroundColor = '';
                }
            });
        }

        // Highlight popular products
        document.querySelectorAll('.product-card').forEach(card => {
            const viewsElement = card.querySelector('.product-views');
            if (viewsElement) {
                const viewsText = viewsElement.textContent.trim();
                const viewsCount = parseInt(viewsText.replace(/\D/g, ''));
                if (viewsCount > 100) { // Adjust this threshold as needed
                    card.classList.add('high-views');
                }
            }
        });

        // Add event listeners for delete buttons
        document.addEventListener('click', function(e) {
            if (e.target.closest('.btn-delete, .btn-delete-small')) {
                e.preventDefault();
                const button = e.target.closest('.btn-delete, .btn-delete-small');
                const productId = button.dataset.productId;
                const productName = button.dataset.productName;
                deleteProduct(productId, productName);
            }
        });
    });

    // Delete product function
    function deleteProduct(productId, productName) {
        if (confirm('Are you sure you want to delete the product "' + productName + '"?\n\nThis action cannot be undone and will permanently remove:\n• All product images and files\n• All product data\n• All associated assets\n\nClick OK to confirm deletion.')) {
            // Show loading state
            const deleteButtons = document.querySelectorAll(`[data-product-id="${productId}"]`);
            deleteButtons.forEach(btn => {
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Deleting...';
            });

            // Make AJAX request to delete
            fetch('/account/Product/delete/' + productId, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Remove the product card/row from DOM
                    const productCard = document.querySelector(`[data-product-name*="${productName}"]`);
                    if (productCard) {
                        productCard.style.transition = 'all 0.3s ease';
                        productCard.style.opacity = '0';
                        productCard.style.transform = 'scale(0.8)';
                        setTimeout(() => {
                            productCard.remove();
                        }, 300);
                    }
                    
                    // Show success message
                    alert('Product "' + productName + '" has been successfully deleted.');
                    
                    // Reload page to update counters
                    setTimeout(() => {
                        window.location.reload();
                    }, 1000);
                } else {
                    alert('Error deleting product: ' + (data.message || 'Unknown error'));
                    // Reset button states
                    deleteButtons.forEach(btn => {
                        btn.disabled = false;
                        btn.innerHTML = '<i class="fas fa-trash"></i> Delete';
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error deleting product. Please try again.');
                // Reset button states
                deleteButtons.forEach(btn => {
                    btn.disabled = false;
                    btn.innerHTML = '<i class="fas fa-trash"></i> Delete';
                });
            });
        }
    }
</script>

