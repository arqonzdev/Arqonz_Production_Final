{% extends 'layouts/UserDashboard_layout.html.twig' %}

{% block content %}
    {% include 'Professional/dashboard_navigation.html.twig' %}

    <div class="dashboard-projects">
        <span>
            <span class="Breadcrumb-nonactive"><a href="/en/account/index">Dashboard</a></span>
            <span class="breadcrumb-divider">></span>
            <span class="Breadcrumb-nonactive"><a href="/account/Requirements">Requirements</a></span>
            <span class="breadcrumb-divider">></span>
            <span class="Breadcrumb-active">
                {% if requirement is defined %}Edit Requirement{% else %}Add Requirement Manually{% endif %}
            </span>
        </span>
    </div>

    <div class="line-8"></div>

    <div class="dashboard-container">
        <div class="left-column" style="width: 100%; justify-content:center;">
            <div class="requirements">
                <div class="dashboardheading-section">
                    <div class="sectionheading" style="width: 100%;">
                        <h2>{% if requirement is defined %}Edit Requirement{% else %}Add Requirement Manually{% endif %}</h2>
                        <p class="sectionsubheading">Create and manage your BOQ interactively</p> 
                    </div>
                </div>

                <div class="requirementcontent">
                    <div id="manualBoqEditor">
                        <!-- Requirement Details Section -->
                        <div class="modern-card requirement-details-section">
                            <div class="card-header">
                                <div class="header-content">
                                    <div class="header-icon">
                                        <i class="fas fa-clipboard-list"></i>
                                    </div>
                                    <div class="header-text">
                                        <h3>Requirement Details</h3>
                                        <p>Basic information about your requirement</p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="card-body">
                                <div class="form-group modern-form-group">
                                    <label for="requirementTitle" class="modern-label">
                                        <i class="fas fa-tag"></i>
                                        Title <span class="required">*</span>
                                    </label>
                                    <input type="text" id="requirementTitle" class="modern-input" 
                                           value="{{ requirement.title|default('') }}" 
                                           placeholder="Enter requirement title" required>
                                </div>
                                
                                <div class="form-group modern-form-group">
                                    <label for="requirementDescription" class="modern-label">
                                        <i class="fas fa-align-left"></i>
                                        Description
                                    </label>
                                    <textarea id="requirementDescription" class="modern-textarea" 
                                              placeholder="Enter requirement description">{{ requirement.description|default('') }}</textarea>
                                </div>
                                
                                <div class="form-row modern-form-row">
                                    <div class="form-group col-md-6 modern-form-group">
                                        <label for="requirementCity" class="modern-label">
                                            <i class="fas fa-map-marker-alt"></i>
                                            City <span class="required">*</span>
                                        </label>
                                        <input type="text" id="requirementCity" class="modern-input" 
                                               value="{{ requirement.city|default('') }}" 
                                               placeholder="Enter city" required>
                                    </div>
                                    
                                    <div class="form-group col-md-6 modern-form-group">
                                        <label for="requirementTargetPrice" class="modern-label">
                                            <i class="fas fa-rupee-sign"></i>
                                            Target Price (â‚¹)
                                        </label>
                                        <input type="number" id="requirementTargetPrice" class="modern-input" 
                                               value="{{ requirement.targetPrice|default('') }}" 
                                               placeholder="Enter target price" step="0.01">
                                    </div>
                                </div>
                                
                                <div class="form-group modern-form-group">
                                    <label for="requirementExpireDate" class="modern-label">
                                        <i class="fas fa-calendar-alt"></i>
                                        Expiry Date
                                    </label>
                                    <input type="datetime-local" id="requirementExpireDate" class="modern-input" 
                                           value="{% if requirement.expireDate is defined %}{{ requirement.expireDate|date('Y-m-d\\TH:i') }}{% endif %}">
                                </div>
                            </div>
                        </div>

                        <!-- Products Section -->
                        <div class="modern-card products-section">
                            <div class="card-header">
                                <div class="header-content">
                                    <div class="header-icon">
                                        <i class="fas fa-boxes"></i>
                                    </div>
                                    <div class="header-text">
                                        <h3>Products</h3>
                                        <p>Add and manage your product requirements</p>
                                    </div>
                                </div>
                                <button type="button" id="addProductBtn" class="modern-btn modern-btn-primary">
                                    <i class="fas fa-plus"></i> 
                                    <span>Add Product</span>
                                </button>
                            </div>
                            
                            <div class="card-body">
                                <div id="productsContainer">
                                    {% if products is defined and products is not empty %}
                                        {% for product in products %}
                                            <div class="product-card modern-product-card" data-product-id="{{ product.id }}">
                                                <div class="product-header">
                                                    <div class="product-title">
                                                        <div class="product-icon">
                                                            <i class="fas fa-cube"></i>
                                                        </div>
                                                        <div class="product-info">
                                                            <h4>Product #<span class="product-number">{{ loop.index }}</span></h4>
                                                            <p>Product details and specifications</p>
                                                        </div>
                                                    </div>
                                                    <button type="button" class="modern-btn modern-btn-danger modern-btn-sm remove-product-btn">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#ffffff" class="bi bi-trash" viewBox="0 0 16 16">
                                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"></path>
                                                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"></path>
                                                        </svg>
                                                    </button>
                                                </div>
                                                
                                                <div class="product-form">
                                                    <div class="form-row modern-form-row">
                                                        <div class="form-group col-md-6 modern-form-group">
                                                            <label class="modern-label">
                                                                <i class="fas fa-tag"></i>
                                                                Product Name <span class="required">*</span>
                                                            </label>
                                                            <input type="text" class="modern-input product-name" 
                                                                   value="{{ product.productName }}" 
                                                                   placeholder="Enter product name" required>
                                                        </div>
                                                        
                                                        <div class="form-group col-md-6 modern-form-group">
                                                            <label class="modern-label">
                                                                <i class="fas fa-award"></i>
                                                                Brand
                                                            </label>
                                                            <input type="text" class="modern-input product-brand" 
                                                                   value="{{ product.brand }}" 
                                                                   placeholder="Enter brand">
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="form-row modern-form-row">
                                                        <div class="form-group col-md-6 modern-form-group">
                                                            <label class="modern-label">
                                                                <i class="fas fa-layer-group"></i>
                                                                Material
                                                            </label>
                                                            <input type="text" class="modern-input product-material" 
                                                                   value="{{ product.material }}" 
                                                                   placeholder="Enter material">
                                                        </div>
                                                        
                                                        <div class="form-group col-md-6 modern-form-group">
                                                            <label class="modern-label">
                                                                <i class="fas fa-th-large"></i>
                                                                Product Type
                                                            </label>
                                                            <input type="text" class="modern-input product-type" 
                                                                   value="{{ product.prodType }}" 
                                                                   placeholder="Enter product type">
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="form-row modern-form-row">
                                                        <div class="form-group col-md-4 modern-form-group">
                                                            <label class="modern-label">
                                                                <i class="fas fa-hashtag"></i>
                                                                Quantity <span class="required">*</span>
                                                            </label>
                                                            <input type="number" class="modern-input product-quantity" 
                                                                   value="{{ product.quantity }}" 
                                                                   placeholder="Quantity" step="0.01" required>
                                                        </div>
                                                        
                                                        <div class="form-group col-md-4 modern-form-group">
                                                            <label class="modern-label">
                                                                <i class="fas fa-ruler"></i>
                                                                Unit <span class="required">*</span>
                                                            </label>
                                                            <input type="text" class="modern-input product-unit" 
                                                                   value="{{ product.unit }}" 
                                                                   placeholder="Unit (e.g., pcs, kg)" required>
                                                        </div>
                                                        
                                                        <div class="form-group col-md-4 modern-form-group">
                                                            <label class="modern-label">
                                                                <i class="fas fa-shield-alt"></i>
                                                                Minimum Reserve
                                                            </label>
                                                            <input type="text" class="modern-input product-min-reserve" 
                                                                   value="{{ product.minimumReserve }}" 
                                                                   placeholder="Minimum reserve">
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="form-group modern-form-group">
                                                        <label class="modern-label">
                                                            <i class="fas fa-align-left"></i>
                                                            Description
                                                        </label>
                                                        <textarea class="modern-textarea product-description" 
                                                                  placeholder="Product description">{{ product.description }}</textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="action-buttons modern-action-buttons">
                            <button type="button" id="saveRequirementBtn" class="modern-btn modern-btn-success modern-btn-lg">
                                <i class="fas fa-save"></i> 
                                <span>{% if requirement is defined %}Update Requirement{% else %}Save Requirement{% endif %}</span>
                            </button>
                            <a href="/account/Requirements" class="modern-btn modern-btn-secondary modern-btn-lg">
                                <i class="fas fa-times"></i>
                                <span>Cancel</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add product template
            const productTemplate = `
                <div class="product-card modern-product-card">
                    <div class="product-header">
                        <div class="product-title">
                            <div class="product-icon">
                                <i class="fas fa-cube"></i>
                            </div>
                            <div class="product-info">
                                <h4>Product #<span class="product-number"></span></h4>
                                <p>Product details and specifications</p>
                            </div>
                        </div>
                        <button type="button" class="modern-btn modern-btn-danger modern-btn-sm remove-product-btn">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                    
                    <div class="product-form">
                        <div class="form-row modern-form-row">
                            <div class="form-group col-md-6 modern-form-group">
                                <label class="modern-label">
                                    <i class="fas fa-tag"></i>
                                    Product Name <span class="required">*</span>
                                </label>
                                <input type="text" class="modern-input product-name" placeholder="Enter product name" required>
                            </div>
                            
                            <div class="form-group col-md-6 modern-form-group">
                                <label class="modern-label">
                                    <i class="fas fa-award"></i>
                                    Brand
                                </label>
                                <input type="text" class="modern-input product-brand" placeholder="Enter brand">
                            </div>
                        </div>
                        
                        <div class="form-row modern-form-row">
                            <div class="form-group col-md-6 modern-form-group">
                                <label class="modern-label">
                                    <i class="fas fa-layer-group"></i>
                                    Material
                                </label>
                                <input type="text" class="modern-input product-material" placeholder="Enter material">
                            </div>
                            
                            <div class="form-group col-md-6 modern-form-group">
                                <label class="modern-label">
                                    <i class="fas fa-th-large"></i>
                                    Product Type
                                </label>
                                <input type="text" class="modern-input product-type" placeholder="Enter product type">
                            </div>
                        </div>
                        
                        <div class="form-row modern-form-row">
                            <div class="form-group col-md-4 modern-form-group">
                                <label class="modern-label">
                                    <i class="fas fa-hashtag"></i>
                                    Quantity <span class="required">*</span>
                                </label>
                                <input type="number" class="modern-input product-quantity" placeholder="Quantity" step="0.01" required>
                            </div>
                            
                            <div class="form-group col-md-4 modern-form-group">
                                <label class="modern-label">
                                    <i class="fas fa-ruler"></i>
                                    Unit <span class="required">*</span>
                                </label>
                                <input type="text" class="modern-input product-unit" placeholder="Unit (e.g., pcs, kg)" required>
                            </div>
                            
                            <div class="form-group col-md-4 modern-form-group">
                                <label class="modern-label">
                                    <i class="fas fa-shield-alt"></i>
                                    Minimum Reserve
                                </label>
                                <input type="text" class="modern-input product-min-reserve" placeholder="Minimum reserve">
                            </div>
                        </div>
                        
                        <div class="form-group modern-form-group">
                            <label class="modern-label">
                                <i class="fas fa-align-left"></i>
                                Description
                            </label>
                            <textarea class="modern-textarea product-description" placeholder="Product description"></textarea>
                        </div>
                    </div>
                </div>
            `;

            // Add product button
            document.getElementById('addProductBtn').addEventListener('click', function() {
                const productsContainer = document.getElementById('productsContainer');
                const newProduct = document.createElement('div');
                newProduct.innerHTML = productTemplate;
                productsContainer.appendChild(newProduct);
                updateProductNumbers();
            });

            // Remove product button (delegated event)
            document.getElementById('productsContainer').addEventListener('click', function(e) {
                if (e.target.classList.contains('remove-product-btn') || 
                    e.target.closest('.remove-product-btn')) {
                    const productCard = e.target.closest('.product-card');
                    if (document.querySelectorAll('.product-card').length > 1) {
                        productCard.remove();
                        updateProductNumbers();
                    } else {
                        alert('At least one product is required.');
                    }
                }
            });

            // Update product numbers
            function updateProductNumbers() {
                const productCards = document.querySelectorAll('.product-card');
                productCards.forEach((card, index) => {
                    const numberSpan = card.querySelector('.product-number');
                    if (numberSpan) {
                        numberSpan.textContent = index + 1;
                    }
                });
            }

            // Save requirement
            document.getElementById('saveRequirementBtn').addEventListener('click', function() {
                const requirementTitle = document.getElementById('requirementTitle').value.trim();
                const requirementCity = document.getElementById('requirementCity').value.trim();
                
                // Basic validation
                if (!requirementTitle || !requirementCity) {
                    alert('Please fill in all required fields (Title and City).');
                    return;
                }

                // Validate products
                const productCards = document.querySelectorAll('.product-card');
                let isValid = true;
                const products = [];

                productCards.forEach(card => {
                    const productName = card.querySelector('.product-name').value.trim();
                    const quantity = card.querySelector('.product-quantity').value.trim();
                    const unit = card.querySelector('.product-unit').value.trim();
                    
                    if (!productName || !quantity || !unit) {
                        isValid = false;
                        return;
                    }

                    products.push({
                        id: card.getAttribute('data-product-id') || '',
                        productName: productName,
                        brand: card.querySelector('.product-brand').value.trim(),
                        material: card.querySelector('.product-material').value.trim(),
                        prodType: card.querySelector('.product-type').value.trim(),
                        quantity: quantity,
                        unit: unit,
                        minDec: card.querySelector('.product-min-reserve').value.trim(),
                        minimumReserve: card.querySelector('.product-min-reserve').value.trim(),
                        description: card.querySelector('.product-description').value.trim()
                    });
                });

                if (!isValid) {
                    alert('Please fill in all required fields for each product (Name, Quantity, and Unit).');
                    return;
                }

                if (products.length === 0) {
                    alert('Please add at least one product.');
                    return;
                }

                // Prepare data
                const requirementData = {
                    {% if requirement is defined %}requirementId: '{{ requirement.key }}',{% endif %}
                    title: requirementTitle,
                    description: document.getElementById('requirementDescription').value.trim(),
                    city: requirementCity,
                    targetPrice: document.getElementById('requirementTargetPrice').value.trim(),
                    expireDate: document.getElementById('requirementExpireDate').value,
                    products: products
                };

                // Show loading
                const saveBtn = document.getElementById('saveRequirementBtn');
                const originalText = saveBtn.innerHTML;
                saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> <span>Saving...</span>';
                saveBtn.disabled = true;

                // Send request
                fetch('/account/save-requirement-manual', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(requirementData)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Requirement saved successfully!');
                        window.location.href = '/account/Requirements';
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    alert('An error occurred while saving the requirement.');
                    console.error('Error:', error);
                })
                .finally(() => {
                    saveBtn.innerHTML = originalText;
                    saveBtn.disabled = false;
                });
            });

            // Initialize product numbers
            updateProductNumbers();
        });
    </script>

    <style>
        /* Modern Design System */
