{% extends 'layouts/UserDashboard_layout.html.twig' %}

{% block content %}

    <div class="dashboard-container">
        <div class="left-column" style="width: 100%;">
            <div class="survey-responses-container">
                <h1>{{ survey.getTitle() }} - Responses</h1>
                <div class="survey-meta">
                    <p><strong>Customer:</strong> {{ survey.getFirstname() }} {{ survey.getLastname() }}</p>
                    <p><strong>Email:</strong> {{ survey.getEmail() }}</p>
                    <p><strong>Total Responses:</strong> {{ answers|length }}</p>
                </div>

                <div class="responses-tabs">
                    <ul class="nav nav-tabs" id="responsesTab" role="tablist">
                        {% for answer in answers %}
                            <li class="nav-item" role="presentation">
                                <button class="nav-link {% if loop.first %}active{% endif %}" 
                                        id="response-{{ loop.index }}-tab" 
                                        data-bs-toggle="tab" 
                                        data-bs-target="#response-{{ loop.index }}" 
                                        type="button" 
                                        role="tab">
                                    Response #{{ loop.index }} ({{ answer.creationDate|date('M d, Y') }})
                                </button>
                            </li>
                        {% endfor %}
                    </ul>
                    
                    <div class="tab-content" id="responsesTabContent">
                        {% for answer in answers %}
                            <div class="tab-pane fade {% if loop.first %}show active{% endif %}" 
                                 id="response-{{ loop.index }}" 
                                 role="tabpanel">
                                 
                                {% for section in surveyQuestions %}
                                    <div class="response-section">
                                        <h3>{{ section.title }}</h3>
                                        
                                        {% for question in section.questions %}
                                            <div class="response-question">
                                                <h4>{{ question.question }}</h4>
                                                <div class="response-answer">
                                                    {% set answerValue = answer.data[section.title][question.question] %}
                                                    
                                                    {% if answerValue is null %}
                                                        <p class="text-muted">No response</p>
                                                    {% elseif question.type == 'text' %}
                                                        <p>{{ answerValue }}</p>
                                                    {% elseif question.type == 'single_select' %}
                                                        <p>{{ answerValue }}</p>
                                                    {% elseif question.type == 'multi_select' %}
                                                        {% if answerValue is iterable %}
                                                            <ul>
                                                                {% for item in answerValue %}
                                                                    <li>{{ item }}</li>
                                                                {% endfor %}
                                                            </ul>
                                                        {% else %}
                                                            <p>{{ answerValue }}</p>
                                                        {% endif %}
                                                    {% endif %}
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .survey-responses-container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .survey-meta {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
        }
        
        .survey-meta p {
            margin: 5px 0;
        }
        
        .responses-tabs {
            margin-top: 20px;
        }
        
        .nav-tabs {
            border-bottom: 1px solid #dee2e6;
        }
        
        .nav-link {
            padding: 10px 15px;
            color: #495057;
            border: 1px solid transparent;
            border-top-left-radius: 4px;
            border-top-right-radius: 4px;
        }
        
        .nav-link.active {
            color: #495057;
            background-color: #fff;
            border-color: #dee2e6 #dee2e6 #fff;
            font-weight: 500;
        }
        
        .tab-content {
            padding: 20px;
            border: 1px solid #dee2e6;
            border-top: none;
            border-radius: 0 0 4px 4px;
            background-color: #fff;
        }
        
        .response-section {
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 1px solid #eee;
        }
        
        .response-section:last-child {
            border-bottom: none;
        }
        
        .response-section h3 {
            color: #4a6fa5;
            margin-bottom: 15px;
            padding-bottom: 5px;
            border-bottom: 2px solid #4a6fa5;
        }
        
        .response-question {
            margin-bottom: 15px;
        }
        
        .response-question h4 {
            font-size: 16px;
            margin-bottom: 5px;
            color: #333;
        }
        
        .response-answer {
            padding-left: 20px;
        }
        
        .response-answer p, 
        .response-answer ul {
            margin: 5px 0;
        }
        
        .response-answer ul {
            padding-left: 20px;
        }
        
        .text-muted {
            color: #6c757d;
            font-style: italic;
        }
        
        @media (max-width: 768px) {
            .survey-responses-container {
                padding: 10px;
            }
            
            .nav-tabs {
                overflow-x: auto;
                white-space: nowrap;
                display: block;
            }
            
            .nav-item {
                display: inline-block;
            }
        }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Bootstrap tabs
            var tabElms = document.querySelectorAll('button[data-bs-toggle="tab"]');
            tabElms.forEach(function(tabEl) {
                tabEl.addEventListener('click', function(event) {
                    event.preventDefault();
                    var tab = new bootstrap.Tab(tabEl);
                    tab.show();
                });
            });
        });
    </script>
{% endblock %}
