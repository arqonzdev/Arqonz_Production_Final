<div class="dashboard-projects">
    <span>
        <span class="Breadcrumb-nonactive"><a href="/en/account/index">Dashboard</a></span><span class="breadcrumb-divider">></span><span class="Breadcrumb-active">Projects</span>
    </span>
</div>
<div class="line-8"></div>

<div class="dashboard-container">
    <div class="left-column" style="width: 100%; justify-content:center;">
        <div class="projectssection">
            <div class="dashboardheading-section">
                <div class="sectionheading">
                    <h2>Projects</h2>
                    <p class="sectionsubheading">Manage Your Projects.</p> 
                </div>
                <div class="DashboardStatsSection">
                    <div class="totalnumber">
                        {% if ProProjects |length < 10 %}
                            <p>0{{ ProProjects |length }}</p>
                        {% else %}
                            <p>{{ ProProjects |length }}</p>
                        {% endif %}    
                    </div>
                    <div class="totalnumberLable">
                        {% if ProProjects |length < 2 %}
                            <p>Project</br>Found</p>
                        {% else %}
                            <p>Projects</br>Found</p>
                        {% endif %}    
                    </div>
                </div>
            </div>

            <div class="RequirementsMain">
                <div class="Add-project-button" style="padding: 20px 0px; margin-bottom: 20px;">
                    <a href="/{{ MaincustType|lower }}/portfolio/add-project" class="btn btn-lg btn-block btn-success btn addrequirebtn" target="_blank">
                        <i class="fa fa-plus" aria-hidden="true" style="font-size:15px;"></i> Add Project
                    </a>
                </div>

                <div class="dashboard-controls">
                    <div class="search-container-new">
                        <input type="text" id="projectSearch" placeholder="Search projects..." class="search-input">
                        <i class="fas fa-search search-icon-new"></i>
                    </div>
                    
                    <div class="view-toggle">
                        <button class="view-btn active" data-view="grid" title="Grid View">
                            <i class="fas fa-th-large"></i>
                        </button>
                        <button class="view-btn" data-view="list" title="List View">
                            <i class="fas fa-list"></i>
                        </button>
                    </div>
                    
                    <div class="sort-dropdown">
                        <select id="sortProjects" class="sort-select">
                            <option value="date-desc" {% if currentSort == 'date-desc' %}selected{% endif %}>Newest First</option>
                            <option value="date-asc" {% if currentSort == 'date-asc' %}selected{% endif %}>Oldest First</option>
                            <option value="name-asc" {% if currentSort == 'name-asc' %}selected{% endif %}>Name (A-Z)</option>
                            <option value="name-desc" {% if currentSort == 'name-desc' %}selected{% endif %}>Name (Z-A)</option>
                            <option value="location-asc" {% if currentSort == 'location-asc' %}selected{% endif %}>Location (A-Z)</option>
                            <option value="location-desc" {% if currentSort == 'location-desc' %}selected{% endif %}>Location (Z-A)</option>
                        </select>
                    </div>
                </div>

                <!-- Modern Card Grid View -->
                <div class="projects-grid" id="projectsGrid">
                    {% for ProProject in ProProjects %}
                        <div class="project-card" data-project-name="{{ ProProject.ProjectName() ?: '' }}" data-project-location="{{ ProProject.getLocation() ?: '' }}">
                            <div class="project-image-container">
                                {% if ProProject.ProjectGallery is not empty %}
                                    {% set images = ProProject.ProjectGallery.getItems() %}
                                    {% if images|length > 0 %}
                                        <img src="{{ images[0].getThumbnail('ProjectFeaturedThumbnail') }}" 
                                             alt="{{ ProProject.ProjectName() }}" 
                                             class="project-image"
                                             loading="lazy">
                                    {% else %}
                                        <div class="project-image-placeholder">
                                            <i class="fas fa-image"></i>
                                            <span>No Image</span>
                                        </div>
                                    {% endif %}
                                {% else %}
                                    <div class="project-image-placeholder">
                                        <i class="fas fa-image"></i>
                                        <span>No Image</span>
                                    </div>
                                {% endif %}
                                <div class="project-overlay">
                                    <a href="/{{ MaincustType|lower }}/project/{{ ProProject.getKey() }}" class="btn-view">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    <a href="/account/Project/edit/{{ ProProject.getKey() }}" class="btn-edit">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <button class="btn-delete" data-project-id="{{ ProProject.getKey() }}" data-project-name="{{ ProProject.ProjectName() }}">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </div>
                            </div>
                            
                            <div class="project-info">
                                <div class="project-header">
                                    <h3 class="project-title">
                                        <a href="/{{ MaincustType|lower }}/project/{{ ProProject.getKey() }}">
                                            {{ ProProject.ProjectName() ?: 'Unnamed Project' }}
                                        </a>
                                    </h3>
                                    <div class="project-id">#{{ ProProject.getKey() }}</div>
                                </div>
                                
                                <div class="project-details">
                                    <div class="project-meta">
                                        <span class="project-location">
                                            <i class="fas fa-map-marker-alt"></i>
                                            {{ ProProject.getLocation() ?: 'Location N/A' }}
                                        </span>
                                    </div>
                                    
                                    <div class="project-date">
                                        <i class="fas fa-calendar"></i>
                                        {{ ProProject.getCreationDate()|date('M d, Y') }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <!-- List View Table (Hidden by default) -->
                <div class="projects-table-container" id="projectsTable" style="display: none;">
                    <table class="requirements-table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>ID</th>
                                <th>Project</th>
                                <th>Location</th>
                                <th>Published Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ProProject in ProProjects %}
                                <tr class="requirement-item" data-project-name="{{ ProProject.ProjectName() ?: '' }}" data-project-location="{{ ProProject.getLocation() ?: '' }}">
                                    <td class="project-image-cell">
                                        {% if ProProject.ProjectGallery is not empty %}
                                            {% set images = ProProject.ProjectGallery.getItems() %}
                                            {% if images|length > 0 %}
                                                <img src="{{ images[0].getThumbnail('ProjectFeaturedThumbnail') }}" 
                                                     alt="{{ ProProject.ProjectName() }}" 
                                                     class="table-project-image"
                                                     loading="lazy">
                                            {% else %}
                                                <div class="table-image-placeholder">
                                                    <i class="fas fa-image"></i>
                                                </div>
                                            {% endif %}
                                        {% else %}
                                            <div class="table-image-placeholder">
                                                <i class="fas fa-image"></i>
                                            </div>
                                        {% endif %}
                                    </td>
                                    <td>{{ ProProject.getKey() }}</td>
                                    <td>
                                        {% if ProProject %}
                                            <a href="/{{ MaincustType|lower }}/project/{{ ProProject.getKey() }}" class="requirementTitle">{{ ProProject.ProjectName() }} </a>
                                        {% endif %}
                                    </td>
                                    <td>{{ ProProject.getLocation() ?: 'N/A' }}</td>
                                    <td>{{ ProProject.getCreationDate()|date('d-m-Y') }}</td>
                                    <td class="actions-cell">
                                        <a href="/{{ MaincustType|lower }}/project/{{ ProProject.getKey() }}" class="btn-action btn-view-small" title="View">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/account/Project/edit/{{ ProProject.getKey() }}" class="btn-action btn-edit-small" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="btn-action btn-delete-small" title="Delete" data-project-id="{{ ProProject.getKey() }}" data-project-name="{{ ProProject.ProjectName() }}">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                {% if ProProjects|length == 0 %}
                    <div class="no-projects">
                        <i class="fas fa-folder-open"></i>
                        <h3>No Projects Found</h3>
                        <p>You haven't added any projects yet. Click the "Add Project" button to get started.</p>
                    </div>
                {% endif %}
            </div>
        </div> 
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // View toggle functionality
        const viewButtons = document.querySelectorAll('.view-btn');
        const gridView = document.getElementById('projectsGrid');
        const tableView = document.getElementById('projectsTable');
        
        viewButtons.forEach(btn => {
            btn.addEventListener('click', function() {
                const view = this.dataset.view;
                
                // Update active button
                viewButtons.forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                
                // Toggle views
                if (view === 'grid') {
                    gridView.style.display = 'grid';
                    tableView.style.display = 'none';
                } else {
                    gridView.style.display = 'none';
                    tableView.style.display = 'block';
                }
            });
        });

        // Search functionality for both views
        const searchInput = document.getElementById('projectSearch');
        
        searchInput.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            
            // Search in grid view
            const projectCards = document.querySelectorAll('.project-card');
            projectCards.forEach(card => {
                const projectName = card.dataset.projectName.toLowerCase();
                const projectLocation = card.dataset.projectLocation.toLowerCase();
                
                if (projectName.includes(searchTerm) || 
                    projectLocation.includes(searchTerm)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
            
            // Search in table view
            const projectRows = document.querySelectorAll('#projectsTable tbody tr');
            projectRows.forEach(row => {
                const projectName = row.dataset.projectName.toLowerCase();
                const projectLocation = row.dataset.projectLocation.toLowerCase();
                
                if (projectName.includes(searchTerm) || 
                    projectLocation.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });

        // Sorting functionality
        const sortSelect = document.getElementById('sortProjects');
        sortSelect.addEventListener('change', function() {
            const sortValue = this.value;
            window.location.href = window.location.pathname + '?sort=' + sortValue;
        });

        // Enhanced hover effects for table
        const table = document.querySelector('#projectsTable table');
        if (table) {
            table.addEventListener('mouseover', function(e) {
                if (e.target.tagName === 'TD') {
                    e.target.parentNode.style.backgroundColor = '#f8f9fa';
                }
            });
            
            table.addEventListener('mouseout', function(e) {
                if (e.target.tagName === 'TD') {
                    e.target.parentNode.style.backgroundColor = '';
                }
            });
        }

        // Add event listeners for delete buttons
        document.addEventListener('click', function(e) {
            if (e.target.closest('.btn-delete, .btn-delete-small')) {
                e.preventDefault();
                const button = e.target.closest('.btn-delete, .btn-delete-small');
                const projectId = button.dataset.projectId;
                const projectName = button.dataset.projectName;
                deleteProject(projectId, projectName);
            }
        });
    });

    // Delete project function
    function deleteProject(projectId, projectName) {
        if (confirm('Are you sure you want to delete the project "' + projectName + '"?\n\nThis action cannot be undone and will permanently remove:\n• All project images and files\n• All project data\n• All associated assets\n\nClick OK to confirm deletion.')) {
            // Show loading state
            const deleteButtons = document.querySelectorAll(`[onclick*="${projectId}"]`);
            deleteButtons.forEach(btn => {
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Deleting...';
            });

            // Make AJAX request to delete
            fetch('/account/Project/delete/' + projectId, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Remove the project card/row from DOM
                    const projectCard = document.querySelector(`[data-project-name*="${projectName}"]`);
                    if (projectCard) {
                        projectCard.style.transition = 'all 0.3s ease';
                        projectCard.style.opacity = '0';
                        projectCard.style.transform = 'scale(0.8)';
                        setTimeout(() => {
                            projectCard.remove();
                        }, 300);
                    }
                    
                    // Show success message
                    alert('Project "' + projectName + '" has been successfully deleted.');
                    
                    // Reload page to update counters
                    setTimeout(() => {
                        window.location.reload();
                    }, 1000);
                } else {
                    alert('Error deleting project: ' + (data.message || 'Unknown error'));
                    // Reset button states
                    deleteButtons.forEach(btn => {
                        btn.disabled = false;
                        btn.innerHTML = '<i class="fas fa-trash"></i> Delete';
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error deleting project. Please try again.');
                // Reset button states
                deleteButtons.forEach(btn => {
                    btn.disabled = false;
                    btn.innerHTML = '<i class="fas fa-trash"></i> Delete';
                });
            });
        }
    }
</script>

