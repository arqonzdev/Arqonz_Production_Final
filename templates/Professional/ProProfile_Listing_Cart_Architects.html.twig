{% extends 'layouts/arqonz_updated_layout.html.twig' %}
{% form_theme form 'bootstrap_5_layout_custom.html.twig' %}

{% block content %}
<script src="https://code.jquery.com/jquery-3.6.3.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.8/js/select2.min.js" defer></script>

<style>
/* Modern Profile Listing Page Styles */
.profile-listing-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem 1rem;
    min-height: 100vh;
}

.page-header {
    text-align: center;
    margin-bottom: 0;
    padding: 2rem 0;
}

.profile-listing-container .page-title {
    font-size: 3rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 1px;
    background: linear-gradient(135deg, #00A79D, #008a7f);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.page-subtitle {
    font-size: 1.125rem;
    color: #64748b;
    font-weight: 400;
}

.filter-section {
    background: white;
    border-radius: 16px;
    padding: 2rem;
    margin-bottom: 3rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    border: 1px solid #e2e8f0;
}

.filter-form {
    display: flex;
    gap: 1rem;
    align-items: end;
    flex-wrap: wrap;
}

.filter-field {
    flex: 1;
    min-width: 200px;
}

.filter-field .form-label {
    font-weight: 600;
    color: #374151;
    margin-bottom: 0.5rem;
    display: block;
}

.filter-field .form-select {
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    transition: all 0.3s ease;
    background: #f9fafb;
}

.filter-field .form-select:focus {
    border-color: #3b82f6;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    background: white;
}

.filter-submit {
    background: #00A79D;
    border: none;
    border-radius: 12px;
    padding: 0.75rem 2rem;
    color: white;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    cursor: pointer;
    min-width: 120px;
}

.filter-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0, 167, 157, 0.3);
    background: #008a7f;
}

.profiles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
}

.profile-card {
    background: white;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    border: 1px solid #e2e8f0;
    position: relative;
}

.profile-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
}

.profile-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(135deg, #00A79D, #008a7f);
}

.profile-header {
    padding: 1.5rem;
    display: flex;
    gap: 1rem;
    align-items: flex-start;
}

.profile-image {
    width: 80px;
    height: 80px;
    border-radius: 16px;
    overflow: hidden;
    flex-shrink: 0;
    border: 3px solid #f1f5f9;
}

.profile-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.profile-info {
    flex: 1;
    min-width: 0;
}

.profile-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 0.5rem;
    line-height: 1.3;
}

.profile-name a {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s ease;
}

.profile-name a:hover {
    color: #3b82f6;
}

.profile-description {
    color: #64748b;
    font-size: 0.875rem;
    line-height: 1.5;
    margin-bottom: 1rem;
}

.profile-description a {
    color: #3b82f6;
    text-decoration: none;
    font-weight: 600;
}

.profile-stats {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
    justify-content: center;
}

.stat-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: #f8fafc;
    padding: 0.5rem 0.75rem;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 600;
    color: #475569;
}

.stat-item i {
    color: #3b82f6;
    font-size: 1rem;
}

.rating-section {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0.75rem 0;
    padding: 0.5rem 0;
}

.stars {
    display: flex;
    gap: 3px;
    align-items: center;
}

.star {
    font-size: 1rem;
    transition: all 0.2s ease;
    line-height: 1;
    display: inline-block;
    width: 1rem;
    height: 1rem;
    text-align: center;
}

.star.filled {
    color: #fbbf24;
    text-shadow: 0 1px 2px rgba(251, 191, 36, 0.2);
}

.star.half {
    color: #fbbf24;
    text-shadow: 0 1px 2px rgba(251, 191, 36, 0.2);
}

.star.empty {
    color: #d1d5db;
    opacity: 0.5;
}

.profile-actions {
    padding: 1.5rem;
    background: #f8fafc;
    border-top: 1px solid #e2e8f0;
}

.view-button {
    width: 100%;
    background: #00A79D;
    border: none;
    border-radius: 12px;
    padding: 0.75rem 1.5rem;
    color: white;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
}

.view-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0, 167, 157, 0.3);
    background: #008a7f;
}

.pagination-container {
    display: flex;
    justify-content: center;
    margin-top: 3rem;
}

/* Responsive Design */
@media (max-width: 768px) {
    .profile-listing-container {
        padding: 1rem 0.5rem;
    }
    
    .page-title {
        font-size: 2rem;
    }
    
    .filter-form {
        flex-direction: column;
        gap: 1rem;
    }
    
    .filter-field {
        width: 100%;
    }
    
    .profiles-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
    
    .profile-header {
        flex-direction: column;
        text-align: center;
    }
    
    .profile-image {
        align-self: center;
    }
    
    .profile-stats {
        justify-content: center;
    }
}

@media (max-width: 480px) {
    .page-title {
        font-size: 1.75rem;
    }
    
    .profile-card {
        margin: 0 0.5rem;
    }
    
    .profile-stats {
        flex-direction: column;
        align-items: center;
    }
}
</style>

<div class="profile-listing-container">
    <div class="page-header">
        {% if customertype == 'Contractor'%}
            <h1 class="page-title">Contractors for you</h1>
        {% endif %}
        {% if customertype == 'Designer'%}
            <h1 class="page-title">Designers for you</h1>
        {% endif %}
        {% if customertype == 'Architect'%}
            <h1 class="page-title">Architects for you</h1>
        {% endif %}
        {% if customertype == 'Builder'%}
            <h1 class="page-title">Builders for you</h1>
        {% endif %}
        {% if customertype == 'Manufacturer'%}
            <h1 class="page-title">Manufacturers for you</h1>
        {% endif %}
        {% if customertype == 'Engineer'%}
            <h1 class="page-title">Engineers for you</h1>
        {% endif %}
        {% if customertype == 'Retailer'%}
            <h1 class="page-title">Retailers for you</h1>
        {% endif %}
        {% if customertype == 'Distributor'%}
            <h1 class="page-title">Distributors for you</h1>
        {% endif %}
        {% if customertype == 'Dealer'%}
            <h1 class="page-title">Dealers for you</h1>
        {% endif %}
        <p class="page-subtitle">Discover top professionals in your area</p>
    </div>

    {% if filterform != '0' %}
        <div class="filter-section">
            <div class="filter-form">
                <div class="filter-field">
                    {{ form_start(form) }}
                    <label for="cityfilterinput" class="form-label">Filter by City</label>
                    {{ form_row(form.FilterCity, {'attr': {'class': 'js-select-cities', 'id':'cityfilterinput', 'value': 'FilterCity'}}) }}
                </div>
                <div class="filter-submit">
                    {{ form_row(form._submit, {'attr': {'class': 'filter-submit'}}) }}
                </div>
            </div>
            {{ form(form) }}
        </div>
    {% endif %}

    <div class="profiles-grid">
        {% for ProProfile in ProProfiles %}
            {% include '/Professional/ProProfile_Listing_Cart_Architects_Card.html.twig' with {'ProProfile': ProProfile, 'listingtype': customertype} %}
        {% endfor %}
    </div>

    <div class="pagination-container">
        <div class="pagination profilepagination">
            {% if customertype != 'Engineer'%}
            {% include 'includes/projectpagination.html.twig' with {'paginationVariables': paginationVariables} %}
            {% else %}
            {% include 'includes/engi-projectpagination.html.twig' with {'paginationVariables': paginationVariables} %}
            {% endif %}
        </div>
    </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
  // Only initialize select2 if the element exists
  if ($(".js-select-cities").length > 0) {
    $(".js-select-cities").select2({
        placeholder: "Select a city",
        allowClear: true,
        width: '100%'
    });
  }
});
</script>
{% endblock %}