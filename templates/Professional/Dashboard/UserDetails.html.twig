{# templates/Professional/Dashboard/UserDetails.html.twig #}
{% extends 'layouts/UserDashboard_layout.html.twig' %}
{% block content %}

<!-- Modern Breadcrumb -->
<div class="modern-breadcrumb">
    <nav class="breadcrumb-nav">
        <a href="{{ path('account-index') }}" class="breadcrumb-link">
            <svg class="breadcrumb-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"/>
            </svg>
            Dashboard
        </a>
        <span class="breadcrumb-separator">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
        </span>
        <span class="breadcrumb-current">User Details</span>
    </nav>
</div>

<!-- Main Container -->
<div class="modern-container">
    <!-- Header Section -->
    <div class="page-header">
        <div class="header-content">
            <div class="header-title">
                <div class="title-icon">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                    </svg>
                </div>
                <h1>User Management</h1>
            </div>
            <p class="header-subtitle">Manage and monitor your platform users</p>
        </div>

        <!-- Controls Section -->
        <div class="header-controls">
            <form method="get" action="{{ path('admin_user_details') }}" class="search-form">
                <div class="search-wrapper">
                    <svg class="search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                    <input id="UserSearch" type="text" name="search" class="search-input" 
                           placeholder="Search by name, email..." value="{{ searchTerm }}">
                    {% if searchTerm %}
                        <a href="{{ path('admin_user_details') }}" class="clear-search">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                        </a>
                    {% endif %}
                </div>
            </form>
            
            <a href="{{ path('admin_user_details', {export: 'excel'}) }}" class="export-btn">
                <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                Export Excel
            </a>
        </div>
    </div>

    <!-- Table Card -->
    <div class="data-card">
        <div class="table-container">
            <table class="modern-table">
                <thead>
                    <tr>
                        <th width="60">#</th>
                        <th>User</th>
                        <th>Contact</th>
                        <th>Progress</th>
                        <th>Profile</th>
                        <th>Company</th>
                        <th>Status</th>
                        <th>Plan</th>
                    </tr>
                </thead>
                <tbody>
                    {% for customer in customers %}
                        <tr class="table-row">
                            <td class="row-number">{{ ((currentPage - 1) * perPage) + loop.index }}</td>
                            <td>
                                <div class="user-info">
                                    <div class="user-avatar">
                                        <span>{{ customer.object.getFirstname()|first|upper }}{{ customer.object.getLastname()|first|upper }}</span>
                                    </div>
                                    <div class="user-details">
                                        <div class="user-name">{{ customer.name }}</div>
                                        <div class="user-meta">User ID: #{{ loop.index }}</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="contact-info">
                                    <div class="email">{{ customer.object.getEmail() }}</div>
                                </div>
                            </td>
                            <td>
                                <div class="progress-container">
                                    <div class="progress-bar">
                                        <div class="progress-fill" style="width: {{ customer.profileCompletion }}%;"></div>
                                    </div>
                                    <span class="progress-text">{{ customer.profileCompletion }}%</span>
                                </div>
                            </td>
                            <td>
                                {% if customer.proProfilePath %}
                                    <a href="{{ customer.proProfilePath }}" target="_blank" class="profile-link">
                                        <svg class="link-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                                        </svg>
                                        View Profile
                                    </a>
                                {% else %}
                                    <span class="not-available">Not Available</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if customer.companyName %}
                                    <div class="company-name">{{ customer.companyName }}</div>
                                {% else %}
                                    <span class="not-available">No Company</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if customer.subscriptionStatus %}
                                    <span class="status-badge status-{{ customer.subscriptionStatus|lower }}">
                                        <span class="status-dot"></span>
                                        {{ customer.subscriptionStatus }}
                                    </span>
                                {% else %}
                                    <span class="not-available">Unknown</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if customer.subscriptionPlan %}
                                    <div class="plan-badge">{{ customer.subscriptionPlan }}</div>
                                {% else %}
                                    <span class="not-available">No Plan</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">
                                <div class="empty-state">
                                    <div class="empty-icon">
                                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                                        </svg>
                                    </div>
                                    <h3>No Users Found</h3>
                                    {% if searchTerm %}
                                        <p>No results match "{{ searchTerm }}"</p>
                                        <a href="{{ path('admin_user_details') }}" class="clear-search-btn">
                                            Clear Search
                                        </a>
                                    {% else %}
                                        <p>Start by adding users to your platform</p>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        {% if totalPages > 1 %}
        <div class="pagination-wrapper">
            <div class="pagination-info">
                Showing <strong>{{ ((currentPage - 1) * perPage) + 1 }}</strong> to 
                <strong>{{ min(currentPage * perPage, totalCount) }}</strong> of 
                <strong>{{ totalCount }}</strong> users
            </div>
            
            <nav class="pagination-nav">
                <div class="pagination">
                    {% if currentPage > 1 %}
                        <a href="{{ path('admin_user_details', {page: currentPage - 1, search: searchTerm}) }}" 
                           class="pagination-btn pagination-prev">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                            </svg>
                        </a>
                    {% endif %}
                    
                    {% set startPage = max(1, currentPage - 2) %}
                    {% set endPage = min(totalPages, currentPage + 2) %}
                    
                    {% if startPage > 1 %}
                        <a href="{{ path('admin_user_details', {page: 1, search: searchTerm}) }}" 
                           class="pagination-btn">1</a>
                        {% if startPage > 2 %}
                            <span class="pagination-ellipsis">...</span>
                        {% endif %}
                    {% endif %}
                    
                    {% for page in startPage..endPage %}
                        <a href="{{ path('admin_user_details', {page: page, search: searchTerm}) }}" 
                           class="pagination-btn {% if page == currentPage %}active{% endif %}">
                            {{ page }}
                        </a>
                    {% endfor %}
                    
                    {% if endPage < totalPages %}
                        {% if endPage < totalPages - 1 %}
                            <span class="pagination-ellipsis">...</span>
                        {% endif %}
                        <a href="{{ path('admin_user_details', {page: totalPages, search: searchTerm}) }}" 
                           class="pagination-btn">{{ totalPages }}</a>
                    {% endif %}
                    
                    {% if currentPage < totalPages %}
                        <a href="{{ path('admin_user_details', {page: currentPage + 1, search: searchTerm}) }}" 
                           class="pagination-btn pagination-next">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </a>
                    {% endif %}
                </div>
            </nav>
        </div>
        {% endif %}
    </div>
</div>

<style>
/* Modern CSS Variables */
:root {
    --primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    --primary-solid: #667eea;
    --secondary: #f8fafc;
    --success: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    --danger: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
    --warning: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
    --dark: #1e293b;
    --light: #f1f5f9;
    --border: #e2e8f0;
    --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    --radius: 12px;
    --radius-sm: 8px;
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Global Styles */
* {
    box-sizing: border-box;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    min-height: 100vh;
    margin: 0;
    padding: 0;
}

/* Modern Breadcrumb */
.modern-breadcrumb {
    margin-bottom: 2rem;
    animation: slideInFromTop 0.6s ease-out;
}

.breadcrumb-nav {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #64748b;
}

.breadcrumb-link {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    color: #64748b;
    text-decoration: none;
    padding: 0.375rem 0.75rem;
    border-radius: var(--radius-sm);
    transition: var(--transition);
}

.breadcrumb-link:hover {
    color: var(--primary-solid);
    background: rgba(102, 126, 234, 0.1);
    transform: translateY(-1px);
}

.breadcrumb-icon {
    width: 1rem;
    height: 1rem;
}

.breadcrumb-separator svg {
    width: 1rem;
    height: 1rem;
    color: #cbd5e1;
}

.breadcrumb-current {
    font-weight: 600;
    color: var(--dark);
}

/* Container */
.modern-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1.5rem;
}

/* Page Header */
.page-header {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--radius);
    padding: 2rem;
    margin-bottom: 1.5rem;
    box-shadow: var(--shadow);
    animation: slideInFromTop 0.8s ease-out;
}

.header-content {
    margin-bottom: 1.5rem;
}

.header-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
}

.title-icon {
    width: 2.5rem;
    height: 2.5rem;
    background: var(--primary);
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow);
}

.title-icon svg {
    width: 1.5rem;
    height: 1.5rem;
    color: white;
}

.header-title h1 {
    margin: 0;
    font-size: 1.875rem;
    font-weight: 700;
    color: var(--dark);
    background: linear-gradient(135deg, var(--dark) 0%, #475569 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.header-subtitle {
    color: #64748b;
    font-size: 1rem;
    margin: 0;
    font-weight: 400;
}

/* Header Controls */
.header-controls {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
}

.search-form {
    flex: 1;
    min-width: 300px;
}

.search-wrapper {
    position: relative;
    display: flex;
    align-items: center;
}

.search-input {
    width: 100%;
    padding: 0.75rem 1rem 0.75rem 2.75rem;
    border: 2px solid var(--border);
    border-radius: var(--radius);
    font-size: 0.875rem;
    background: white;
    transition: var(--transition);
    font-family: inherit;
}

.search-input:focus {
    outline: none;
    border-color: var(--primary-solid);
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    transform: translateY(-1px);
}

.search-icon {
    position: absolute;
    left: 0.875rem;
    width: 1.125rem;
    height: 1.125rem;
    color: #94a3b8;
    z-index: 1;
}

.clear-search {
    position: absolute;
    right: 0.75rem;
    color: #94a3b8;
    transition: var(--transition);
}

.clear-search:hover {
    color: #ef4444;
    transform: rotate(90deg);
}

.clear-search svg {
    width: 1rem;
    height: 1rem;
}

.export-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--success);
    color: white;
    text-decoration: none;
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius);
    font-weight: 500;
    font-size: 0.875rem;
    box-shadow: var(--shadow);
    transition: var(--transition);
}

.export-btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    color: white;
    text-decoration: none;
}

.btn-icon {
    width: 1.125rem;
    height: 1.125rem;
}

/* Data Card */
.data-card {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    overflow: hidden;
    animation: slideInFromBottom 1s ease-out;
}

.table-container {
    overflow-x: auto;
}

/* Modern Table */
.modern-table {
    width: 100%;
    border-collapse: collapse;
    background: transparent;
}

.modern-table thead {
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
}

.modern-table th {
    padding: 1rem;
    text-align: left;
    font-weight: 600;
    font-size: 0.75rem;
    color: #475569;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-bottom: 2px solid var(--border);
    white-space: nowrap;
}

.table-row {
    transition: var(--transition);
    border-bottom: 1px solid rgba(226, 232, 240, 0.5);
}

.table-row:hover {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
    transform: translateX(2px);
}

.modern-table td {
    padding: 1rem;
    vertical-align: middle;
    border-bottom: 1px solid rgba(226, 232, 240, 0.3);
}

.row-number {
    font-weight: 600;
    color: #64748b;
    font-family: 'JetBrains Mono', monospace;
}

/* User Info */
.user-info {
    display: flex;
    align-items: center;
    gap: 0.875rem;
}

.user-avatar {
    width: 2.5rem;
    height: 2.5rem;
    background: var(--primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    font-size: 0.875rem;
    box-shadow: var(--shadow);
    position: relative;
}

.user-avatar::after {
    content: '';
    position: absolute;
    inset: -2px;
    border-radius: 50%;
    background: var(--primary);
    z-index: -1;
    opacity: 0.3;
    animation: pulse 2s infinite;
}

.user-name {
    font-weight: 600;
    color: var(--dark);
    margin-bottom: 0.125rem;
}

.user-meta {
    font-size: 0.75rem;
    color: #64748b;
    font-family: 'JetBrains Mono', monospace;
}

/* Contact Info */
.contact-info .email {
    color: #475569;
    font-size: 0.875rem;
}

/* Progress */
.progress-container {
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.progress-bar {
    width: 5rem;
    height: 0.5rem;
    background: #e2e8f0;
    border-radius: 9999px;
    overflow: hidden;
    position: relative;
}

.progress-fill {
    height: 100%;
    background: var(--primary);
    border-radius: 9999px;
    transition: width 1s ease-out;
    position: relative;
}

.progress-fill::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
    animation: shimmer 2s infinite;
}

.progress-text {
    font-size: 0.75rem;
    font-weight: 600;
    color: #475569;
    font-family: 'JetBrains Mono', monospace;
}

/* Profile Link */
.profile-link {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    color: var(--primary-solid);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: var(--transition);
}

.profile-link:hover {
    color: #4f46e5;
    text-decoration: none;
    transform: translateX(2px);
}

.link-icon {
    width: 0.875rem;
    height: 0.875rem;
}

/* Status Badges */
.status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.375rem 0.875rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.025em;
    box-shadow: var(--shadow);
}

.status-active {
    background: linear-gradient(135deg, #10b981 0%, #34d399 100%);
    color: white;
}

.status-inactive {
    background: linear-gradient(135deg, #6b7280 0%, #9ca3af 100%);
    color: white;
}

.status-expired {
    background: linear-gradient(135deg, #ef4444 0%, #f87171 100%);
    color: white;
}

.status-dot {
    width: 0.5rem;
    height: 0.5rem;
    border-radius: 50%;
    background: currentColor;
    animation: pulse 2s infinite;
}

.plan-badge {
    background: linear-gradient(135deg, #8b5cf6 0%, #a78bfa 100%);
    color: white;
    padding: 0.375rem 0.875rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.025em;
    box-shadow: var(--shadow);
}

.company-name {
    color: #475569;
    font-weight: 500;
}

.not-available {
    color: #94a3b8;
    font-style: italic;
    font-size: 0.875rem;
}

/* Empty State */
.empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: #64748b;
}

.empty-icon {
    width: 4rem;
    height: 4rem;
    margin: 0 auto 1.5rem;
    background: linear-gradient(135deg, #e2e8f0 0%, #cbd5e1 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.empty-icon svg {
    width: 2rem;
    height: 2rem;
    color: #94a3b8;
}

.empty-state h3 {
    margin: 0 0 0.5rem;
    color: var(--dark);
    font-weight: 600;
}

.empty-state p {
    margin: 0 0 1.5rem;
    color: #64748b;
}

.clear-search-btn {
    background: var(--primary);
    color: white;
    text-decoration: none;
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius);
    font-weight: 500;
    transition: var(--transition);
    display: inline-block;
}

.clear-search-btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    color: white;
    text-decoration: none;
}

/* Pagination */
.pagination-wrapper {
    display: flex;
    justify-content: between;
    align-items: center;
    padding: 1.5rem 2rem;
    border-top: 1px solid rgba(226, 232, 240, 0.5);
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
}

.pagination-info {
    color: #64748b;
    font-size: 0.875rem;
    flex: 1;
}

.pagination {
    display: flex;
    align-items: center;
    gap: 0.25rem;
}

.pagination-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 2.25rem;
    height: 2.25rem;
    padding: 0 0.75rem;
    border-radius: var(--radius-sm);
    color: #64748b;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
    transition: var(--transition);
    position: relative;
}

.pagination-btn:hover {
    background: rgba(102, 126, 234, 0.1);
    color: var(--primary-solid);
    text-decoration: none;
    transform: translateY(-1px);
}

.pagination-btn.active {
    background: var(--primary);
    color: white;
    box-shadow: var(--shadow);
}

.pagination-ellipsis {
    color: #94a3b8;
    padding: 0 0.5rem;
}

/* Animations */
@keyframes slideInFromTop {
