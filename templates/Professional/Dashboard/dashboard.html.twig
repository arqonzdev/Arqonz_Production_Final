    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const searchInput = document.getElementById('supplier-search-input');
            const searchButton = document.getElementById('supplier-search-btn');

            // Function to redirect to the search page
            function redirectToSearch() {
                const keyword = searchInput.value.trim();
                if (keyword) {
                    // Encode keyword to handle special characters in URL
                    const encodedKeyword = encodeURIComponent(keyword);
                    window.location.href = `/suppliers-search/${encodedKeyword}`;
                }
            }

            // Listen for Enter key in the input field
            searchInput.addEventListener('keypress', function (event) {
                if (event.key === 'Enter') {
                    redirectToSearch();
                }
            });

            // Listen for click on the search button
            searchButton.addEventListener('click', function () {
                redirectToSearch();
            });
        });
    </script>

