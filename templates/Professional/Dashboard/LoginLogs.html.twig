{% extends 'layouts/UserDashboard_layout.html.twig' %}

{% block content %}
<div class="dashboard-projects">
    <span>
        <span class="Breadcrumb-nonactive"><a href="{{ path('account-index') }}">Dashboard</a></span>
        <span class="breadcrumb-divider">></span>
        <span class="Breadcrumb-active">Login Logs</span>
    </span>
</div>
<div class="line-8"></div>

<div class="dashboard-container login-logs-container">
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Login Activity</h2>
            <form method="get" action="{{ path('admin_login_logs') }}" class="form-inline">
                <div class="input-group">
                    <input id="UserSearch" type="text" name="search" class="form-control form-control-sm" 
                           placeholder="Search Email" value="{{ searchTerm }}">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fas fa-search"></i>
                        </button>
                        {% if searchTerm %}
                            <a href="{{ path('admin_login_logs') }}" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-times"></i>
                            </a>
                        {% endif %}
                    </div>
                </div>
            </form>
        </div>
        
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0" style="width:100%;">
                    <thead class="bg-light">
                        <tr>
                            <th width="50" style="font-weight: 700;">#</th>
                            <th style="font-weight: 700;">User</th>
                            <th style="font-weight: 700;">Login Time</th>
                            <th style="font-weight: 700;">Duration</th>
                            <th style="font-weight: 700;">IP Address</th>
                            <th style="font-weight: 700;">Device</th>
                            <th style="font-weight: 700;">Pages</th>
                            <th width="100" style="font-weight: 700;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for log in logs %}
                            <tr>
                                <td>{{ ((currentPage - 1) * perPage) + loop.index }}</td>
                                <td>
                                    {% if log.getUser() %}
                                        <div class="d-flex align-items-center">
                                            <div class="avatar bg-light rounded-circle mr-2" style="width:32px;height:32px;line-height:32px;text-align:center;">
                                                {{ log.getUser().getfirstname()|first|upper }}{{ log.getUser().getlastname()|first|upper }}
                                            </div>
                                            <div>
                                                <div class="font-weight-bold">{{ log.getuser().getfirstname() }} {{ log.getuser().getlastname() }}</div>
                                                <div class="text-muted small">{{ log.getuser().getemail() }}</div>
                                            </div>
                                        </div>
                                    {% else %}
                                        <span class="text-muted">User deleted</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge badge-light" style="position: static;">
                                        {% if log.getloginTime() %}
                                            {% set istTimezone = 'Asia/Kolkata' %}
                                            {{ log.getloginTime().setTimezone(istTimezone).format('d M Y, H:i') }}
                                        {% else %}
                                            N/A
                                        {% endif %}
                                    </span>
                                </td>
                                <td>
                                    {% if log.getlogoutTime() %}
                                        <span class="badge badge-light" style="position: static;">
                                            {{ log.getloginTime().diff(log.getlogoutTime())|date('%Hh %Im') }}
                                        </span>
                                    {% else %}
                                        <span class="badge badge-warning" style="position: static;">Active</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <code>{{ log.getIpAddress() }}</code>
                                </td>
                                <td>
                                    {% set userAgent = log.getUserAgent() %}
                                    <div class="d-flex align-items-center">
                                        {% if 'Mobile' in userAgent %}
                                            <i class="fas fa-mobile-alt text-primary mr-1"></i>
                                            <small>Mobile</small>
                                        {% elseif 'Tablet' in userAgent %}
                                            <i class="fas fa-tablet-alt text-info mr-1"></i>
                                            <small>Tablet</small>
                                        {% else %}
                                            <i class="fas fa-desktop text-secondary mr-1"></i>
                                            <small>Desktop</small>
                                        {% endif %}
                                    </div>
                                </td>
                                <td>
                                    <span class="badge badge-pill {{ log.decodedPageViewsCount > 0 ? 'badge-primary' : 'badge-light' }}" style="position: static;">
                                        {{ log.decodedPageViewsCount }}
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('admin_login_log_details', {id: log.getId()}) }}" 
                                           class="btn btn-sm btn-outline-primary" 
                                           title="View Details"
                                           data-toggle="tooltip">
                                            View
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8" class="text-center py-4">
                                    <div class="empty-state">
                                        <i class="fas fa-user-clock fa-3x text-muted mb-3"></i>
                                        <h5>No login logs found</h5>
                                        {% if searchTerm %}
                                            <p class="text-muted">No results for "{{ searchTerm }}"</p>
                                            <a href="{{ path('admin_login_logs') }}" class="btn btn-sm btn-primary mt-2">
                                                Clear search
                                            </a>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        
        {% if totalPages > 1 %}
        <div class="card-footer bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    Showing <strong>{{ ((currentPage - 1) * perPage) + 1 }}</strong> to 
                    <strong>{{ min(currentPage * perPage, totalCount) }}</strong> of 
                    <strong>{{ totalCount }}</strong> entries
                </div>
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm mb-0">
                        {% if currentPage > 1 %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('admin_login_logs', {page: currentPage - 1, search: searchTerm}) }}">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>
                        {% endif %}
                        
                        {% set startPage = max(1, currentPage - 2) %}
                        {% set endPage = min(totalPages, currentPage + 2) %}
                        
                        {% if startPage > 1 %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('admin_login_logs', {page: 1, search: searchTerm}) }}">1</a>
                            </li>
                            {% if startPage > 2 %}
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            {% endif %}
                        {% endif %}
                        
                        {% for page in startPage..endPage %}
                            <li class="page-item {% if page == currentPage %}active{% endif %}">
                                <a class="page-link" href="{{ path('admin_login_logs', {page: page, search: searchTerm}) }}">
                                    {{ page }}
                                </a>
                            </li>
                        {% endfor %}
                        
                        {% if endPage < totalPages %}
                            {% if endPage < totalPages - 1 %}
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            {% endif %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('admin_login_logs', {page: totalPages, search: searchTerm}) }}">
                                    {{ totalPages }}
                                </a>
                            </li>
                        {% endif %}
                        
                        {% if currentPage < totalPages %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('admin_login_logs', {page: currentPage + 1, search: searchTerm}) }}">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>
        </div>
        {% endif %}
    </div>
</div>

<style>
    .login-logs-container {
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .avatar {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-weight: 500;
    }
    
    .empty-state {
        padding: 2rem;
        text-align: center;
    }
    
    .table th {
        white-space: nowrap;
        font-weight: 500;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
    }
    #UserSearch {
        padding: 7px;
        margin: 20px 0px;
    }
    
    .badge {
        font-weight: 500;
    }
    
    /* .breadcrumb-divider {
        margin: 0 8px;
        color: #6c757d;
    } */
    
    .Breadcrumb-nonactive a {
        color: #6c757d;
        text-decoration: none;
    }
    
    .Breadcrumb-active {
        color: #000;
        font-weight: bold;
    }
    
    .line-8 {
        height: 1px;
        background-color: #e0e0e0;
        margin: 15px 0;
    }
    
</style>

<script>
$(function () {
  $('[data-toggle="tooltip"]').tooltip()
})
</script>
{% endblock %}